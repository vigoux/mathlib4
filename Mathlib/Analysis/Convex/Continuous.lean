  have hunorm : (u : Set E) ‚äÜ closedBall 0 (u.sup' hu (‚Äñ¬∑‚Äñ) + 1) := by
    simp only [subset_def, Finset.mem_coe, mem_closedBall, dist_zero_right, ‚Üê sub_le_iff_le_add,
